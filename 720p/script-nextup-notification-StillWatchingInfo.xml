        <control type="group">
            <animation effect="fade" start="0" end="100" time="300" tween="quadratic" easing="out">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="300" delay="300" tween="quadratic" easing="out">WindowClose</animation>
            <control type="image">
                <left>0</left>
                <bottom>0</bottom>
                <width>1280</width>
                <height>180</height>
                <aspectratio>stretch</aspectratio>
                <texture>OSDbackground.png</texture>
            </control>
            <control type="image">
                <description>separator image</description>
                <left>0</left>
                <bottom>140</bottom>
                <width>1280</width>
                <height>1</height>
                <colordiffuse>66FFFFFF</colordiffuse>
                <texture>separator2.png</texture>
            </control>
            <control type="image">
                <description>separator image</description>
                <left>0</left>
                <bottom>100</bottom>
                <width>1280</width>
                <height>1</height>
                <colordiffuse>66FFFFFF</colordiffuse>
                <texture>separator2.png</texture>
            </control>
            <control type="group">
                <left>20</left>
                <bottom>30</bottom>
                <width>200</width>
                <height>300</height>
                <control type="image">
                    <top>-6</top>
                    <left>-6</left>
                    <bottom>-6</bottom>
                    <right>-6</right>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                    <texture>ContentPanelvertical.png</texture>
                </control>
                <control type="image" id="4001">
                    <width>100%</width>
                    <height>100%</height>
                    <fadetime>200</fadetime>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                </control>
            </control>
            <control type="label" id="4003">
                <description>IMDB rating</description>
                <left>2000</left>
                <top>2000</top>
                <width>200</width>
                <height>20</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>cirrus_20</font>
                <textcolor>white</textcolor>
                <shadowcolor>black</shadowcolor>
            </control>
            <control type="label">
                <left>240</left>
                <bottom>145</bottom>
                <width>700</width>
                <height>30</height>
                <scroll>true</scroll>
                <label>$ADDON[service.nextup.notification 30012]</label>
                <align>left</align>
                <aligny>center</aligny>
                <font>cirrus_24_Bold</font>
                <textcolor>accent</textcolor>
                <shadowcolor>black</shadowcolor>
            </control>
            <control type="label">
                <left>240</left>
                <bottom>105</bottom>
                <width>580</width>
                <height>30</height>
                <scroll>true</scroll>
                <label>$INFO[Control.GetLabel(4000)]</label>
                <align>left</align>
                <aligny>center</aligny>
                <font>cirrus_24_Bold</font>
                <textcolor>white</textcolor>
                <shadowcolor>black</shadowcolor>
            </control>
            <control type="label">
                <description>First Aired</description>
                <right>20</right>
                <bottom>145</bottom>
                <width>250</width>
                <height>30</height>
                <label>[COLOR=accent]$LOCALIZE[20416]: [/COLOR] $INFO[Control.GetLabel(4004)]</label>
                <align>right</align>
                <aligny>center</aligny>
                <font>cirrus_24</font>
                <visible>!IsEmpty(Control.GetLabel(4004))</visible>
            </control>
            <control type="label" id="4000">
                <left>2000</left>
                <top>2000</top>
                <align>right</align>
                <aligny>center</aligny>
                <font>cirrus_24</font>
                <textcolor>white</textcolor>
                <shadowcolor>black</shadowcolor>
            </control>
            <control type="label" id="4004">
                <left>2000</left>
                <top>2000</top>
                <align>right</align>
                <aligny>center</aligny>
                <font>cirrus_24</font>
                <textcolor>white</textcolor>
                <shadowcolor>black</shadowcolor>
            </control>
            <control type="textbox" id="4006">
                <left>240</left>
                <bottom>10</bottom>
                <width>860</width>
                <height>80</height>
                <align>left</align>
                <aligny>bottom</aligny>
                <autoscroll time="3000" delay="10000" repeat="5000"/>
                <font>cirrus_20</font>
                <textcolor>white</textcolor>
                <shadowcolor>black</shadowcolor>
            </control>
            <control type="group">
                <left>1100</left>
                <bottom>0</bottom>
                <width>180</width>
                <height>100</height>
                <control type="label">
                    <description>Timer</description>
                    <width>160</width>
                    <height>40</height>
                    <centerright>50%</centerright>
                    <centertop>-20</centertop>
                    <font>cirrus_22_Bold</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <label>$INFO[Player.TimeRemaining(ss)]</label>
                    <align>center</align>
                    <aligny>center</aligny>
                </control>
                <control type="image">
                    <description>Busy animation</description>
                    <centerright>50%</centerright>
                    <centertop>-20</centertop>
                    <width>45</width>
                    <height>45</height>
                    <texture>busy.png</texture>
                    <colordiffuse>accent</colordiffuse>
                    <aspectratio>keep</aspectratio>
                    <animation effect="rotate" start="360" end="0" center="auto" time="2000" loop="true" condition="Player.Playing">conditional</animation>
                </control>
                <control type="button" id="4012">
                    <description>Continue</description>
                    <height>40</height>
                    <width>90%</width>
                    <centerright>50%</centerright>
                    <top>5</top>
                    <ondown>4013</ondown>
                    <onup>4013</onup>
                    <label>$ADDON[service.nextup.notification 30010]</label>
                    <textoffsetx>20</textoffsetx>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>cirrus_16</font>
                    <texturefocus border="0">button-focus.png</texturefocus>
                    <texturenofocus border="0">button-nofocus.png</texturenofocus>
                    <pulseonselect>false</pulseonselect>
                </control>
                <control type="button" id="4013">
                    <description>Cancel</description>
                    <height>40</height>
                    <width>90%</width>
                    <centerright>50%</centerright>
                    <bottom>5</bottom>
                    <onup>4012</onup>
                    <ondown>4012</ondown>
                    <label>222</label>
                    <textoffsetx>20</textoffsetx>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>cirrus_16</font>
                    <texturefocus border="0">button-focus.png</texturefocus>
                    <texturenofocus border="0">button-nofocus.png</texturenofocus>
                    <pulseonselect>false</pulseonselect>
                </control>
            </control>
